{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2016",
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist",
    "declarationDir": ".",

    // Environment Configuration
    "esModuleInterop": true,

    // Enhance Strictness
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
  },
  "exclude": ["dist", "test"],
}
